<!-- index.ejs -->

<h1>This is the index.</h1>
<h2>Showing user messages: </h2>
<ul>
  <% for (let i = 0; i < messages.length; i++) { %>
    <li>
      <h3><%= messages[i].username %></h3>
      <p><%= messages[i].text %></p>
      <p><%= messages[i].added %></p>
      <a href="/messages/<%= messages[i].id %>">Open</a>
    </li>
    <% } %>
</ul>
<%- include('../partials/navbar', {links: links}) %>